@model BuyOrSell.Data.Entities.Ad
@{
    ViewData["Title"] = "Delete Ad";
}


<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
        <form method="post" asp-action="DeletePost">
            <input asp-for="Id" hidden />

            <div class="form-group">
                <label asp-for="Name">Name: </label>
                <input asp-for="Name" disabled class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Description">Description: </label>
                <textarea rows="4" asp-for="Description" disabled class="form-control"></textarea>

            </div>
            <div class="form-group">
                <label asp-for="Url">Url picture: </label>
                <input asp-for="Url" disabled class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Price">Price: </label>
                <input asp-for="Price" disabled class="form-control" />

            </div>
            <br />
            <div>
                <label asp-for="Cattegory">Choose a category:</label>
                <select class="form-select" name="cattegory" id="cattegory">
                    <option value=""></option>
                    <option value="namestaj">Namestaj</option>
                    <option value="automobil">Automobil</option>
                    <option value="belatehnika">Bela tehnika</option>
                    <option value="audio">Audio uredjaji</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Town">Town: </label>
                <input asp-for="Town" disabled class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" disabled class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />

            </div>


            <br />

            <div class="form-group row">
                <div class="col-8 offset-4 row">

                    <div class="col">
                        <input type="submit" class="btn btn-danger w-100" value="Delete" />
                    </div>
                    <div class="col">
                        <a asp-area="" asp-controller="Home" asp-action="Ads" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>



